<h1>詳細</h1>

<table class="table table-hover">
  <thead class="thead-default">
    <tr>
      <th>名前</th>
      <th>詳しい説明</th>
      <th>牌</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @free_choice_post.name %></td>
      <td><%= @free_choice_post.description %></td>
      <td>
        <% @free_choice_post.pais.split(',').each do |id| %>
        <%= image_tag id2pai(id).img %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<p>
  <%= Post.human_attribute_name :created_at %>
  <%= @free_choice_post.created_at %>
</p>
<p>
  <%= Post.human_attribute_name :updated_at %>
  <%= @free_choice_post.updated_at %>
</p>
<%= link_to '編集', edit_free_choice_post_path, class: 'btn btn-primary' %>
<%= link_to '削除', @free_choice_post, method: :delete, data: { confirm: "投稿「#{@free_choice_post.name}」を削除します。よろしいですか？" }, class: 'btn btn-danger' %>
