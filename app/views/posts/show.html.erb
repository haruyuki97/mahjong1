<h1>詳細</h1>

<table class="table table-hover">
  <thead class="thead-default">
    <tr>
      <th>name</th>
      <th>description</th>
      <th>pais</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @post.name %></td>
      <td><%= @post.description %></td>
      <td>
        <% @post.pais.split(',').each do |id| %>
        <%= image_tag id2pai(id).img %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<p>
  <%= Post.human_attribute_name :created_at %>
  <%= @post.created_at %>
</p>
<p>
  <%= Post.human_attribute_name :updated_at %>
  <%= @post.updated_at %>
</p>
<%= link_to '編集', edit_post_path, class: 'btn btn-primary' %>
<%= link_to '削除', @post, method: :delete, data: { confirm: "投稿「#{@post.name}」を削除します。よろしいですか？" }, class: 'btn btn-danger' %>

<%= link_to 'コメントする', new_post_comment_path(params[:id]), class: 'btn btn-success' %>
<%= link_to 'コメント一覧', post_comments_path(params[:id]), class: 'btn btn-success' %>
