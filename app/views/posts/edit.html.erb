<h1>Posts#edit</h1>
<p>Find me in app/views/posts/edit.html.erb</p>
<%= form_with model: @post do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name%>
</p>
<p>
  <%= f.label :description %>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.submit nil, class: 'btn btn-primary' %>
</p>
<% end %>
<% unless @post.pais.nil? %>
<% @post.pais.split(',').each do |id| %>
<%= image_tag @ps.id2pai(id).img %>
<% end %>
<% end %>
