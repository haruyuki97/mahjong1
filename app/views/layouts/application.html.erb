<!DOCTYPE html>
<html>
  <head>
    <title>麻雀配牌シミュレータ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha256-pasqAKBDmFT4eHoN2ndd6lN370kFiGUFyTiUHWhU7k8=" crossorigin="anonymous"></script>
  </head>

  <body>
    <div class="app-title navbar-expand-md navbar-light bg-light">
      <div class="navbar-brand">
        麻雀配牌シミュレータ
      </div>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><%= link_to 'ランダム投稿一覧', posts_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to '自由投稿一覧', free_choice_posts_path, class: 'nav-link' %></li>

        <% if current_user %>
          <li class="nav-item"><%= link_to '投稿一覧', posts_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ユーザー一覧', admin_users_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %></li>
        <% else %>
          <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
